---
import '@fontsource-variable/inter';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { Avatar } from '../components/avatar.jsx';
---

<Layout title='Jin Jin Heipler'>
  <div
    slot='hero-content'
    class='hero-content items-center justify-center lg:flex-row w-full h-1/2'
  >
    <div class='flex flex-col items-start'>
      <h1
        class="font-['Inter_Variable'] font-bold text-white text-5xl flex-none w-auto"
      >
        Hi, I'm Jin Jin
      </h1>
      <h2 class='text-white text-3xl mt-4'>
        I'm a <span class='text-cyan-400'>front-end developer</span> with a passion
        for combining <span class='text-cyan-400'>code</span> and <span
          class='text-cyan-400'>creativity</span
        > to solve problems.
      </h2>
    </div>
    <Avatar />
  </div>
  <main></main>
</Layout>
