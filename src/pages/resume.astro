---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Resume - Jin Jin Heipler'>
  <div slot="hero-content" class="flex items-center justify-center">
    <h1 class="text-white text-4xl font-bold">Resume</h1>
  </div>
  <main class='bg-[#1E293B] py-6 sm:py-12 px-4'>
    <div class="max-w-5xl mx-auto">
      <!-- Desktop PDF Viewer -->
      <div class="hidden lg:block bg-white rounded-lg shadow-lg overflow-hidden">
        <iframe 
          src="/JinJin_Heipler_Resume.pdf" 
          class="w-full h-[85vh] border-0"
          title="Jin Jin Heipler Resume"
        ></iframe>
      </div>
      <!-- Mobile PDF Link -->
      <div class="lg:hidden bg-white rounded-lg shadow-lg p-8">
        <p class="text-gray-700 text-center mb-6">
          Tap the button below to view the PDF in your browser
        </p>
        <div class="flex justify-center">
          <a 
            href="/JinJin_Heipler_Resume.pdf" 
            target="_blank"
            class="inline-block py-2 px-6 rounded-full text-white bg-[#BB96EA] hover:bg-[#A46DEA] hover:text-white hover:drop-shadow-md duration-300 text-base font-medium"
          >
            Open Resume PDF
          </a>
        </div>
      </div>
      <div class="mt-4 sm:mt-6 hidden lg:flex justify-center">
        <a 
          href="/JinJin_Heipler_Resume.pdf" 
          download
          class="inline-block py-2 px-6 rounded-full text-white bg-[#BB96EA] hover:bg-[#A46DEA] hover:text-white hover:drop-shadow-md duration-300 text-base font-medium"
        >
          Download Resume
        </a>
      </div>
    </div>
  </main>
</Layout>

